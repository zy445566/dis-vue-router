{
    "compilerOptions": {
      "lib": ["ES2020"],
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "strict": true,
      "declaration": true,
      "declarationMap":true,
      "declarationDir": "./dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "emitDeclarationOnly": true,
      "skipLibCheck": true,
    },
    "include": [
        "src/**/*"
    ]
  }